resume = true

profiles {

    setonix {

        process { 
            cache = 'lenient'
            stageInMode = 'symlink'
        }
        
    
    singularity { 
        enabled = true
        cacheDir = "$MYSOFTWARE/.nextflow_singularity"
        envWhitelist = 'SINGULARITY_BINDPATH, SINGULARITYENV_LD_LIBRARY_PATH, SINGULARITYENV_LD_PRELOAD'
}


process {

   withName: 'busco_acti'          { container = 'docker://ezlabgva/busco:v5.4.6_cv1' }
   withName: 'busco_vert'          { container = 'docker://ezlabgva/busco:v5.4.6_cv1' }
   withName: 'busco_mamm'          { container = 'docker://ezlabgva/busco:v5.4.6_cv1' }
   withName: 'bwa_align'           { container = 'quay.io/hdc-workflows/bwa-samtools:93deeda' }
   withName: 'merqury'             { container = 'quay.io/biocontainers/merqury:1.3--hdfd78af_0' }
   withName: 'compile_busco_acti'  { container =  'docker://sawtooth01/rjson:v0.1' }
   withName: 'compile_busco_vert'   { container =  'docker://sawtooth01/rjson:v0.1' }

}


    
params.slurm_account = 'pawsey0812'

process {
    executor = 'slurm'
    clusterOptions = "--account=${params.slurm_account}"
    queue = 'work'



    withName: 'busco_acti' {
        cpus          = { 8 }
        memory        = { 30.GB }
        time          = { 10.h }
        errorStrategy = { task.exitStatus in [143,137,104,134,139,247] ? 'retry' : 'finish' }
    }

   withName: 'compile_busco_acti' {
        cpus          = { 1 }
        memory        = { 2.GB }
        time          = { 1.h }
        errorStrategy = { task.exitStatus in [143,137,104,134,139,247] ? 'retry' : 'finish' }
   }

   withName: 'busco_vert' {
        cpus          = { 8 }
        memory        = { 8.GB }
        time          = { 14.h }
        errorStrategy = { task.exitStatus in [143,137,104,134,139,247] ? 'retry' : 'finish' }
    }

   withName: 'compile_busco_vert' {
        cpus          = { 1 }
        memory        = { 2.GB }
        time          = { 1.h }
        errorStrategy = { task.exitStatus in [143,137,104,134,139,247] ? 'retry' : 'finish' }
   }

    withName: 'busco_mamm' {
        cpus          = { 8 }
        memory        = { 8.GB }
        time          = { 12.h }
        errorStrategy = { task.exitStatus in [143,137,104,134,139,247] ? 'retry' : 'finish' }     
   }


    withName: 'bwa_align' {
        cpus          = { 6 }
        memory        = { 12.GB }
        time          = { 10.h }
        errorStrategy = { task.exitStatus in [143,137,104,134,139,247] ? 'retry' : 'finish' }
    }
   

   }
    withName: 'merqury' {
        cpus          = { 6 }
        memory        = { 20.GB }
        time          = { 5.h }
        errorStrategy = { task.exitStatus in [143,137,104,134,139,247] ? 'retry' : 'finish' }
   
   }

}

   executor { 
          $slurm {
	    queueSize = 1000
            pollInterval = '1 min'
            queueStatInterval = '5min'
   }
  }
}
